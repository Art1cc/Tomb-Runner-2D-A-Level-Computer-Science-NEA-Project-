<Window x:Class="Tomb_Runner_2D_with_movement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tomb_Runner_2D_with_movement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FocusManager.FocusedElement ="{Binding ElementName = Level}">

    <Grid>
        <Canvas Name ="MenuScreen"  Visibility="Visible" Background="SaddleBrown" >


            <Rectangle Name ="PlayButton" Fill="SandyBrown" Height="100" Canvas.Left="261" Stroke="Black" Canvas.Top="182" Width="284" MouseDown="PlayClicked"/>
            <Rectangle Name ="ExitButton" Fill="SandyBrown" Height="100" Canvas.Left="261" Stroke="Black" Canvas.Top="309" Width="284" MouseDown="ExitClicked"/>
            <TextBlock Canvas.Left="364" TextWrapping="Wrap" Text="Play" Canvas.Top="202" FontSize="48"/>
            <TextBlock Canvas.Left="364" TextWrapping="Wrap" Text="Exit" Canvas.Top="328" FontSize="48"/>
        </Canvas>

        <Canvas Name ="LevelMenu"  Visibility="Collapsed" Background="SaddleBrown">
            <Rectangle Name ="GenerateButton" Fill="SandyBrown" Height="80" Canvas.Left="250" Stroke="Black" Canvas.Top="205" Width="300" MouseDown="GenerateClicked"/>
            <TextBlock Canvas.Left="283" TextWrapping="Wrap" Canvas.Top="222" FontSize="36"><Run Text="Generate Level"/></TextBlock>
            <Rectangle Name ="BackButton"  Fill="SandyBrown" Height="55" Canvas.Left="10" Stroke="Black" Canvas.Top="354" Width="128" MouseDown="BackClicked"/>
            <TextBlock Canvas.Left="39" TextWrapping="Wrap" Canvas.Top="354" FontSize="36" Text="Back" Height="41" Width="83" />
            <Rectangle Name ="CharacterCustomisationButton"  Fill="SandyBrown" Height="122" Canvas.Left="10" Stroke="Black" Canvas.Top="10" Width="180" MouseDown="CharacterButtonClicked"/>
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="34" FontSize="14" Text="Will show current character and when clicked, will expand into a character customisation menu" Width="180"/>


        </Canvas>

        <Canvas Name="Level" Focusable="True" Background="AntiqueWhite" Visibility="Collapsed" KeyDown="KeyPressed" KeyUp="KeyReleased" >
            <Rectangle Name ="Character" Fill="SandyBrown" Height="50" Canvas.Left="377" Stroke="Black" Canvas.Top="199" Width="50" />
            <Rectangle Name ="QuitLevel"  Canvas.Top="394" Fill="SandyBrown" Height="30" Stroke="Black" Width="74" MouseDown="LevelQuit" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="10"/>


        </Canvas>




    </Grid>
</Window>
